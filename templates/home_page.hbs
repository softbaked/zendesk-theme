{{!-- Hide header background on the home page --}}
<style>
  .header {
    background-color: transparent;
    box-shadow: none;
  }
</style>

<section class="section hero hero-large">
  <div class="hero-inner">
    <h1 class="hero-inner-home-heading">ให้เราช่วยเรื่องอะไรดี?</h1>
    <div class="hero-inner-search">
      {{search submit=false instant=settings.instant_search class="search search-full" placeholder="พิมพ์เพื่อค้นหาได้เลย..."}}
    </div>
    <p class="hero-inner-description"><strong><i class="fas fa-book"></i> คู่มือ:</strong> เรียนรู้การใช้งาน<a
        href="/hc/th/articles/900001869343">สำหรับผู้ใช้ใหม่</a> </p>
  </div>
</section>

<div class="container">
  <section class="section knowledge-base">
    <h1 class="home-categories-heading" id="browse-knowledge-base">ดูตามหมวดหมู่</h1>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
        {{#if ../has_multiple_categories}}
        <li class="blocks-item">
          <a href='{{url}}' class="blocks-item-link">
          <i class="{{description}}" style="color: white;font-size: 50px;margin: 10px;"></i>
           
           {{#is name 'General'}}
            <img alt="General" src="{{asset 'home-general.png'}}" />
            {{/is}}
            
            <h2 class="blocks-item-title">{{name}}</h2>
            <!--p class="blocks-item-description">{{excerpt description}}</p-->
          </a>
        </li>
        {{else}}
        {{#each sections}}
        <li class="blocks-item">
          <a href='{{url}}' class="blocks-item-link">
            <h2 class="blocks-item-title">
              {{name}}
            </h2>
            <p class="blocks-item-description">{{excerpt description}}</p>
          </a>
        </li>
        {{/each}}
        {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>

